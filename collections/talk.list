<style>

.effects {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    align-items: stretch
    align-content: space-between;
}

.effects .img {
    position: relative;
    overflow: hidden;
    width: 310px;
    height: 227px;
}

.effects .img img {
    display: block;
    margin: 0;
    padding: 0;
    max-width: 100%;
    height: auto;
}

.overlay {
    display: block;
    position: absolute;
    z-index: 20;
    background: rgba(0, 0, 0, 0.9);
    overflow: hidden;
    transition: all 0.5s;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}


.overlay:hover {
    opacity: 1;
}

.overlay > h4 {
    color: white;
    text-align: center;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

</style>

{# credit for overlay to http://callmenick.com/2014/03/06/image-overlay-hover-effects-with-css3-transitions/}
<div class="talks effects clearfix">
    {.repeated section items}
    <script>console.log({@|json-pretty})</script>

    <div class="img" class="content-fill">
        {.main-image?}
        <img {@|image-meta}>
        {.or}
        {# some default}
        {.end}
        <div class="overlay">
            <h4>{title}</h4>
        </div>

    </div>
    {.end}
</div>
